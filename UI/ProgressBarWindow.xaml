<Window x:Class="CTecUtil.UI.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTecUtil.UI"
        mc:Ignorable="d"
        Background="Transparent"
        BorderBrush="Transparent"
        BorderThickness="0"
        AllowsTransparency="True"
        WindowStyle="None"
        Width="240"
        Height="130"
        Style="{StaticResource CTecMessageBoxStyle}"
        Title="ProgressBarWindow">
    <Grid>
        <Border Background="{StaticResource Brush10}" 
                BorderBrush="#707070" 
                BorderThickness="2"
                CornerRadius="10"
                Width="Auto"
                Height="Auto">
            
            <StackPanel Grid.Column="0" Grid.Row="0"
                        Orientation="Vertical" Margin="10"
                        HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock Name="txtOperationName" HorizontalAlignment="Center"/>
                    
                <Grid Margin="0,15,0,0">
                
                    <ProgressBar Name="pbProgress"  Height="18" Width="200" Value="0" Minimum="0" Maximum="100"/>
                    
                    <!-- Progress as a percentage - binds 'Value' property of ProgressBar control to TextBlock Text -->
                    <!--<TextBlock Name="tbProgress" Text="{Binding ElementName=pbLoad, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />-->
                    
                    <TextBlock Name="txtProgress" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    
                </Grid>

                <TextBlock Name="txtProcessName" HorizontalAlignment="Center"/>

                <Grid HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="{Binding Path=Option_Cancel, Source={StaticResource Resources}}" Click="Button_Click"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
