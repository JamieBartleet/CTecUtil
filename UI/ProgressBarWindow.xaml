<Window x:Class="CTecUtil.UI.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTecUtil.UI"
        mc:Ignorable="d"
        Background="Transparent"
        BorderBrush="Transparent"
        BorderThickness="0"
        AllowsTransparency="True"
        WindowStyle="None"
        Width="300"
        Height="120"
        Style="{StaticResource CTecMessageBoxStyle}"
        Title="ProgressBarWindow">
    <Grid>
        <Border Background="{StaticResource Brush10}" 
                BorderBrush="#707070" 
                BorderThickness="2"
                CornerRadius="10"
                Width="300"
                Height="120">
            
            <StackPanel Grid.Column="0" Grid.Row="0"
                        Orientation="Vertical"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                
                    <ProgressBar Name="pbLoad"
                                 Visibility="Visible" Width="200"
                                 Margin="12, 4" Height="20"
                                 Value="0" Minimum="0" Maximum="100"/>
                    
                        <!-- TextBlock displayed in the center of the Progress Bar -->
                        <!-- Indicates progress as a percentage -->
                        <!-- Binds 'Value' property of ProgressBar control to TextBlock Text -->
                        <!--<TextBlock Name="tbProgress" Visibility="Visible"
                                   Text="{Binding ElementName=pbLoad, Path=Value, StringFormat={}{0:0}%}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />-->
                    
                        <TextBlock Name="txtProgress" Visibility="Visible"
                                   Text="{Binding Progress}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
                    
                <TextBlock Name="txtLegend"
                           Visibility="Visible"
                           Text="{Binding Legend}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
            
                </StackPanel>
        </Border>
    </Grid>
</Window>
